section.qa(id="qa")
    .qa__mask(v-if="isShowResult")
    div.qa__result(v-if="isShowResult" v-bind:class="{ok:displayResult,error:!displayResult}")
    div.qa__bd           
        div.qa__content(v-bind:class="{'fixed4': currentQuestion == 3}")
            div.l-container
                .qa__start(v-if="!isStart")
                    div.l-vm
                        div.l-vm__content
                            p.title
                                span.tipinfo 注意
                                span.text 【準備開始囉！】<br class="mbOnly"/> 一題限時５秒回答，未在時間內完成即算答錯~ 
                            div.number {{startTimeCount}}
                transition-group(name='fade' enter-active-class="animated fadeInRight" leave-active-class="animated fadeOutLeft" tag="div")
                    div.qa-wrap(v-for="(question,index) in questions" v-bind:key="index"  v-if="index == currentQuestion" )            
                        div.l-vm
                            div.l-vm__content
                                .qa__info
                                    div.qa__step
                                        span {{timeCount}}
                                    .qa__progress
                                        span.display-bar
                                .qa__type
                                    span {{question.type}}
                                .qa__main.clearfix
                                    .qa__q.clearfix
                                        span.icon Q
                                        span.number {{index + 1}}
                                        span.text {{question.title}}
                                    .qa__list
                                        .qa__items
                                            div.qa__item.gtm-event(v-for="(option,optionIndex) in question.options" v-bind:key="optionIndex" v-on:click="selectedOption($event,index,optionIndex + 1)" v-bind:class="{ 'active': optionIndex +1 == currentSelected && isShowResult ,'disabled': optionIndex +1 != currentSelected && isShowResult }" data-category="bread-click" data-action="ans-click" v-bind:data-label="option")
                                                div.text.gtm-event(v-html="option" data-category="bread-click" data-action="ans-click" v-bind:data-label="option")